@model IEnumerable<HRManagementMVCCore31DapperWebApp2.Models.Department>

@{
    ViewData["Title"] = "Index";
}

<h5>Department List</h5>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Create Department</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @* @Html.DisplayNameFor(model => model.DepartmentId) *@
                Department Id
            </th>
            <th>
                @* @Html.DisplayNameFor(model => model.DepartmentName) *@
                Department
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DepartmentId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DepartmentName)
            </td>
            @* <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.DepartmentId }) |
                @Html.ActionLink("Details", "Details", new { id = item.DepartmentId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.DepartmentId })
            </td> *@
            <td>
                    <a href="@Url.Action("Edit", new { id=item.DepartmentId })" class="btn btn-warning">Edit</a> |
                    <a href="@Url.Action("Details", new { id=item.DepartmentId })" class="btn btn-info">Details</a> |
                    <a href="@Url.Action("Delete", new { id=item.DepartmentId })" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
